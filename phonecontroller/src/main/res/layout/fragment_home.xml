<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/you_connected_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/you_connect_string"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium"/>


    <RelativeLayout
        android:id="@+id/info_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/associate_with_mode_text_view_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="@string/associated_with_string" />
        <ImageView
            android:id="@+id/mode_type_image_view"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/associate_with_mode_text_view_home_fragment"
            android:src="@android:drawable/ic_menu_edit"
            />
        <ImageButton
            android:id="@+id/edit_mode_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_edit"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/current_connected_wifi_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/info_rel_layout"
        android:layout_below="@id/you_connected_text_view"
        android:gravity="center"
        android:text="123"
        android:textAppearance="@android:style/TextAppearance.Large" />
    <LinearLayout
        android:id="@+id/sad_linear_layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>